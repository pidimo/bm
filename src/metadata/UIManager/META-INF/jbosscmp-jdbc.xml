<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jbosscmp-jdbc PUBLIC "-//JBoss//DTD JBOSSCMP-JDBC 4.0//EN"
        "http://www.jboss.org/j2ee/dtd/jbosscmp-jdbc_4_0.dtd">
<jbosscmp-jdbc>
    <defaults>
        <datasource>java:/elwisDS
        </datasource>
    </defaults>
    <enterprise-beans>
        <entity>
            <ejb-name>StyleSheet</ejb-name>
            <table-name>stylesheet</table-name>
            <cmp-field>
                <field-name>companyId</field-name>
                <column-name>companyid</column-name>
            </cmp-field>
            <cmp-field>
                <field-name>styleSheetId</field-name>
                <column-name>stylesheetid</column-name>
            </cmp-field>
            <cmp-field>
                <field-name>userId</field-name>
                <column-name>userid</column-name>
            </cmp-field>
            <cmp-field>
                <field-name>version</field-name>
                <column-name>version</column-name>
            </cmp-field>
            <cmp-field>
                <field-name>styleSheetType</field-name>
                <column-name>stylesheettype</column-name>
            </cmp-field>
        </entity>
        <entity>
            <ejb-name>Style</ejb-name>
            <table-name>style</table-name>
            <cmp-field>
                <field-name>companyId</field-name>
                <column-name>companyid</column-name>
            </cmp-field>
            <cmp-field>
                <field-name>name</field-name>
                <column-name>name</column-name>
            </cmp-field>
            <cmp-field>
                <field-name>styleId</field-name>
                <column-name>styleid</column-name>
            </cmp-field>
            <cmp-field>
                <field-name>styleSheetId</field-name>
                <column-name>stylesheetid</column-name>
            </cmp-field>
        </entity>
        <entity>
            <ejb-name>StyleAttribute</ejb-name>
            <table-name>styleattribute</table-name>
            <cmp-field>
                <field-name>companyId</field-name>
                <column-name>companyid</column-name>
            </cmp-field>
            <cmp-field>
                <field-name>attributeId</field-name>
                <column-name>attributeid</column-name>
            </cmp-field>
            <cmp-field>
                <field-name>name</field-name>
                <column-name>name</column-name>
            </cmp-field>
            <cmp-field>
                <field-name>styleId</field-name>
                <column-name>styleid</column-name>
            </cmp-field>
            <cmp-field>
                <field-name>value</field-name>
                <column-name>value</column-name>
            </cmp-field>
        </entity>
    </enterprise-beans>

    <relationships>
        <ejb-relation>
            <ejb-relation-name>StyleSheet - Style</ejb-relation-name>
            <ejb-relationship-role>
                <ejb-relationship-role-name>stylesheet</ejb-relationship-role-name>
                <key-fields>
                    <key-field>
                        <field-name>styleSheetId</field-name>
                        <column-name>stylesheetid</column-name>
                    </key-field>
                </key-fields>
            </ejb-relationship-role>
            <ejb-relationship-role>
                <ejb-relationship-role-name>style</ejb-relationship-role-name>
                <key-fields/>
                <batch-cascade-delete/>
            </ejb-relationship-role>
        </ejb-relation>
        <ejb-relation>
            <ejb-relation-name>Style - StyleAttribute</ejb-relation-name>
            <ejb-relationship-role>
                <ejb-relationship-role-name>style</ejb-relationship-role-name>
                <key-fields>
                    <key-field>
                        <field-name>styleId</field-name>
                        <column-name>styleid</column-name>
                    </key-field>
                </key-fields>
            </ejb-relationship-role>
            <ejb-relationship-role>
                <ejb-relationship-role-name>styleattribute</ejb-relationship-role-name>
                <key-fields/>
                <batch-cascade-delete/>
            </ejb-relationship-role>
        </ejb-relation>
    </relationships>

</jbosscmp-jdbc>