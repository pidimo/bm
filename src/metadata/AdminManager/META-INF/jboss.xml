<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE jboss PUBLIC "-//JBoss//DTD JBOSS 4.0//EN" "http://www.jboss.org/j2ee/dtd/jboss_4_0.dtd">
<jboss>
    <enterprise-beans>
        <entity>
            <ejb-name>User</ejb-name>
            <local-jndi-name>Elwis.User</local-jndi-name>
        </entity>
        <entity>
            <ejb-name>Company</ejb-name>
            <local-jndi-name>Elwis.Company</local-jndi-name>
        </entity>
        <entity>
            <ejb-name>AdminFreeText</ejb-name>
            <local-jndi-name>Elwis.AdminFreeText</local-jndi-name>
        </entity>
        <entity>
            <ejb-name>Role</ejb-name>
            <local-jndi-name>Elwis.Role</local-jndi-name>
        </entity>
        <entity>
            <ejb-name>SystemModule</ejb-name>
            <local-jndi-name>Elwis.SystemModule</local-jndi-name>
            <read-only>true</read-only>
        </entity>
        <entity>
            <ejb-name>SystemFunction</ejb-name>
            <local-jndi-name>Elwis.SystemFunction</local-jndi-name>
            <configuration-name>DeadlockAvoidingConfiguration</configuration-name>
            <method-attributes>
                <method>
                    <method-name>getFunctionCode</method-name>
                    <read-only>true</read-only>
                </method>
            </method-attributes>
        </entity>
        <entity>
            <ejb-name>FunctionDependency</ejb-name>
            <local-jndi-name>Elwis.FunctionDependency</local-jndi-name>
        </entity>
        <entity>
            <ejb-name>CompanyModule</ejb-name>
            <local-jndi-name>Elwis.CompanyModule</local-jndi-name>
            <call-by-value>false</call-by-value>
        </entity>
        <entity>
            <ejb-name>AccessRights</ejb-name>
            <local-jndi-name>Elwis.AccessRights</local-jndi-name>
            <configuration-name>DeadlockAvoidingConfiguration</configuration-name>
            <method-attributes>
                <method>
                    <method-name>getSystemFunction</method-name>
                    <read-only>true</read-only>
                </method>
                <method>
                    <method-name>getActive</method-name>
                    <read-only>true</read-only>
                </method>
                <method>
                    <method-name>getPermission</method-name>
                    <read-only>true</read-only>
                </method>
            </method-attributes>
        </entity>
        <entity>
            <ejb-name>UserGroup</ejb-name>
            <local-jndi-name>Elwis.UserGroup</local-jndi-name>
        </entity>
        <entity>
            <ejb-name>UserOfGroup</ejb-name>
            <local-jndi-name>Elwis.UserOfGroup</local-jndi-name>
        </entity>
        <entity>
            <ejb-name>UserSessionLog</ejb-name>
            <local-jndi-name>Elwis.UserSessionLog</local-jndi-name>
        </entity>
        <entity>
            <ejb-name>UserRole</ejb-name>
            <local-jndi-name>ELWIS.UserRole</local-jndi-name>
        </entity>
        <entity>
            <ejb-name>ApplicationMailSignature</ejb-name>
            <local-jndi-name>ELWIS.ApplicationMailSignature</local-jndi-name>
        </entity>
        <entity>
            <ejb-name>PasswordChange</ejb-name>
            <local-jndi-name>Elwis.PasswordChange</local-jndi-name>
        </entity>
        <entity>
            <ejb-name>RolePasswordChange</ejb-name>
            <local-jndi-name>Elwis.RolePasswordChange</local-jndi-name>
        </entity>
        <entity>
            <ejb-name>UserPasswordChange</ejb-name>
            <local-jndi-name>Elwis.UserPasswordChange</local-jndi-name>
        </entity>
        <entity>
            <ejb-name>DynamicSearch</ejb-name>
            <local-jndi-name>Elwis.DynamicSearch</local-jndi-name>
        </entity>
        <entity>
            <ejb-name>DynamicSearchField</ejb-name>
            <local-jndi-name>Elwis.DynamicSearchField</local-jndi-name>
        </entity>
        <entity>
            <ejb-name>DemoAccount</ejb-name>
            <local-jndi-name>Elwis.DemoAccount</local-jndi-name>
        </entity>
    </enterprise-beans>
    <container-configurations>
        <container-configuration extends="Standard CMP 2.x EntityBean">
            <container-name>DeadlockAvoidingConfiguration</container-name>
            <locking-policy>org.jboss.ejb.plugins.lock.SimpleReadWriteEJBLock</locking-policy>
        </container-configuration>
    </container-configurations>
</jboss>
