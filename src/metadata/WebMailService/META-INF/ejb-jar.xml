<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd"
         version="2.1">
    <enterprise-beans>

        <session>
            <ejb-name>EmailService</ejb-name>
            <local-home>com.piramide.elwis.service.webmail.EmailServiceHome</local-home>
            <local>com.piramide.elwis.service.webmail.EmailService</local>
            <ejb-class>com.piramide.elwis.service.webmail.EmailServiceBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>

        <session>
            <ejb-name>UtilService</ejb-name>
            <local-home>com.piramide.elwis.service.webmail.UtilServiceHome</local-home>
            <local>com.piramide.elwis.service.webmail.UtilService</local>
            <ejb-class>com.piramide.elwis.service.webmail.UtilServiceBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>

        <session>
            <ejb-name>SaveEmailService</ejb-name>
            <local-home>com.piramide.elwis.service.webmail.SaveEmailServiceHome</local-home>
            <local>com.piramide.elwis.service.webmail.SaveEmailService</local>
            <ejb-class>com.piramide.elwis.service.webmail.SaveEmailServiceBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <session>
            <ejb-name>EmailSourceService</ejb-name>
            <local-home>com.piramide.elwis.service.webmail.EmailSourceServiceHome</local-home>
            <local>com.piramide.elwis.service.webmail.EmailSourceService</local>
            <ejb-class>com.piramide.elwis.service.webmail.EmailSourceServiceBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Bean</transaction-type>
        </session>
        <session>
            <ejb-name>DownloadEmailService</ejb-name>
            <local-home>com.piramide.elwis.service.webmail.DownloadEmailServiceHome</local-home>
            <local>com.piramide.elwis.service.webmail.DownloadEmailService</local>
            <ejb-class>com.piramide.elwis.service.webmail.DownloadEmailServiceBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Bean</transaction-type>
        </session>
        <session>
            <ejb-name>SentEmailService</ejb-name>
            <local-home>com.piramide.elwis.service.webmail.SentEmailServiceHome</local-home>
            <local>com.piramide.elwis.service.webmail.SentEmailService</local>
            <ejb-class>com.piramide.elwis.service.webmail.SentEmailServiceBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Bean</transaction-type>
        </session>


        <message-driven>
            <ejb-name>SearchEmailInBackgroundMDB</ejb-name>
            <ejb-class>com.piramide.elwis.service.webmail.SearchEmailInBackgroundMDB</ejb-class>
            <messaging-type>javax.jms.MessageListener</messaging-type>
            <transaction-type>Bean</transaction-type>
            <activation-config>
                <activation-config-property>
                    <activation-config-property-name>destinationType</activation-config-property-name>
                    <activation-config-property-value>javax.jms.Queue</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>acknowledgeMode</activation-config-property-name>
                    <activation-config-property-value>Auto-acknowledge</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>subscriptionDurability</activation-config-property-name>
                    <activation-config-property-value>Durable</activation-config-property-value>
                </activation-config-property>
            </activation-config>
        </message-driven>

        <message-driven>
            <ejb-name>SentEmailMDB</ejb-name>
            <ejb-class>com.piramide.elwis.service.webmail.SentEmailMDB</ejb-class>
            <messaging-type>javax.jms.MessageListener</messaging-type>
            <transaction-type>Bean</transaction-type>
            <activation-config>
                <activation-config-property>
                    <activation-config-property-name>destinationType</activation-config-property-name>
                    <activation-config-property-value>javax.jms.Queue</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>acknowledgeMode</activation-config-property-name>
                    <activation-config-property-value>Auto-acknowledge</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>subscriptionDurability</activation-config-property-name>
                    <activation-config-property-value>Durable</activation-config-property-value>
                </activation-config-property>
            </activation-config>
        </message-driven>

        <message-driven>
            <ejb-name>DownloadEmailInBackgroupdMDB</ejb-name>
            <ejb-class>com.piramide.elwis.service.webmail.DownloadEmailInBackgroupdMDB</ejb-class>
            <messaging-type>javax.jms.MessageListener</messaging-type>
            <transaction-type>Bean</transaction-type>
            <activation-config>
                <activation-config-property>
                    <activation-config-property-name>destinationType</activation-config-property-name>
                    <activation-config-property-value>javax.jms.Queue</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>acknowledgeMode</activation-config-property-name>
                    <activation-config-property-value>Auto-acknowledge</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>subscriptionDurability</activation-config-property-name>
                    <activation-config-property-value>Durable</activation-config-property-value>
                </activation-config-property>
            </activation-config>
        </message-driven>

        <message-driven>
            <ejb-name>DownloadEmailMDB</ejb-name>
            <ejb-class>com.piramide.elwis.service.webmail.DownloadEmailMDB</ejb-class>
            <messaging-type>javax.jms.MessageListener</messaging-type>
            <transaction-type>Bean</transaction-type>
            <activation-config>
                <activation-config-property>
                    <activation-config-property-name>destinationType</activation-config-property-name>
                    <activation-config-property-value>javax.jms.Queue</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>acknowledgeMode</activation-config-property-name>
                    <activation-config-property-value>Auto-acknowledge</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>subscriptionDurability</activation-config-property-name>
                    <activation-config-property-value>Durable</activation-config-property-value>
                </activation-config-property>
            </activation-config>
        </message-driven>

        <message-driven>
            <ejb-name>DeleteEmailMDB</ejb-name>
            <ejb-class>com.piramide.elwis.service.webmail.DeleteEmailMDB</ejb-class>
            <messaging-type>javax.jms.MessageListener</messaging-type>
            <transaction-type>Bean</transaction-type>
            <activation-config>
                <activation-config-property>
                    <activation-config-property-name>destinationType</activation-config-property-name>
                    <activation-config-property-value>javax.jms.Queue</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>acknowledgeMode</activation-config-property-name>
                    <activation-config-property-value>Auto-acknowledge</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>subscriptionDurability</activation-config-property-name>
                    <activation-config-property-value>Durable</activation-config-property-value>
                </activation-config-property>
            </activation-config>
        </message-driven>
    </enterprise-beans>

    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>SaveEmailService</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>EmailService</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>UtilService</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>DownloadEmailInBackgroupdMDB</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>NotSupported</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>SearchEmailInBackgroundMDB</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>NotSupported</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>DownloadEmailMDB</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>NotSupported</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>SentEmailMDB</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>NotSupported</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>DeleteEmailMDB</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>NotSupported</trans-attribute>
        </container-transaction>

    </assembly-descriptor>
</ejb-jar>